<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.SeccionPaciente.CambiarContrasena"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/editText_pass_actual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Contrase単a actual"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_edtxt"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary2"/>

                <EditText
                    android:id="@+id/editText_pass_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Nueva contrase単a"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edtxt"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary2"/>

                <EditText
                    android:id="@+id/editText_pass_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_edtxt"
                    android:ems="10"
                    android:hint="Confirmar contrase単a"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary2" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_cambiar_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar contrase単a"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_btn"
            android:textColor="#fff"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
