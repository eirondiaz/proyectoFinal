<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.PacienteLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary2">

        <LinearLayout
            android:id="@+id/topLy"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary2">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textColor="#fff"
                android:fontFamily="@font/roboto_light"
                android:textStyle="bold"
                android:textSize="40sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:layout_below="@id/topLy"
            android:background="@drawable/bg_lybottonlogin">


            <EditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="40dp"
                android:hint="Email"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_edtxt"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/edContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Contraseña"
                android:textColor="@color/colorPrimary2"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_edtxt"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olvidaste tu constraseña?"
                android:textColor="@color/colorPrimary2"
                android:layout_marginTop="7dp"
                android:textSize="17sp"
                android:layout_gravity="end"/>

            <Button
                android:id="@+id/btnLogIn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Iniciar Sesión"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary2"
                android:background="@drawable/bg_btnregistro"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Registrate"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/bg_btn"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
